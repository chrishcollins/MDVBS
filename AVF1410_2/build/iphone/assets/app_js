Ti.UI.setBackgroundColor("#000");var tabGroup=Titanium.UI.createTabGroup(),mainWin=Ti.UI.createWindow({backgroundImage:"images/beach.png",fullscreen:!1,exitOnClose:!0,navBarHidden:!1,tabBarHidden:!0}),tab1=Titanium.UI.createTab({icon:"KS_nav_views.png",title:"Tab 1",window:mainWin});tabGroup.addTab(tab1);var mainView=Ti.UI.createScrollView({showVerticalScrollIndicator:!0}),needWeather=require("weather"),mediaBtn=Ti.UI.createButton({title:"Camera",backgroundColor:"#fff",borderColor:"#2261E8",borderRadius:"5",color:"#2261E8",bottom:"10%",width:"12%",zIndex:"1"}),mediaView=Ti.UI.createView({top:"20%",width:"90%",height:"",backgroundColor:"#FFCC00"}),img;mainWin.add(mediaBtn),mainWin.add(mediaView);var camera={onSuccess:function(e){e.mediaType===Ti.Media.MEDIA_TYPE_PHOTO?(img&&mediaView.remove(img),img=Ti.UI.createImageView({image:e.media,zIndex:1}),mediaView.add(img)):e.mediaType===Ti.Media.MEDIA_TYPE_VIDEO?(vid=Ti.Media.createVideoPlayer({media:e.media}),mediaView.add(vid)):alert("This is not a photo or video")},onCancel:function(){alert("Photo cancelled")},onError:function(e){alert("An error occured with code: "+e.code)}};mediaBtn.addEventListener("click",function(){Ti.Media.showCamera({success:camera.onSuccess,cancel:camera.onCancel,error:camera.onError,allowEditing:!0,mediaTypes:[Ti.Media.MEDIA_TYPE_PHOTO],videoQuality:Ti.Media.QUALITY_HIGH,saveToPhotoGallery:!0})}),mainWin.add(mainView),tabGroup.open();