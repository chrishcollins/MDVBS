	// Create a Button.
	var back_btn = Ti.UI.createButton({
		title : 'Back',
		color: '#fff',
		backgroundImage : 'images/redbtn',
		height : 30,
		width : 80,
		top : 20,
		left : 15
	});

	// Add to the parent view.
	groupView.add(back_btn);

Map.createMap();

newbandWin.add('Map');

	newbandWin.open();

	// Listen for click events.
	back_btn.addEventListener('click', function() {
		newbandWin.close();
	});
	
	//event listener
tktLink.addEventListener('click', function(e)
{
//open link in safari - application will close
Titanium.Platform.openURL(ticket_url);
