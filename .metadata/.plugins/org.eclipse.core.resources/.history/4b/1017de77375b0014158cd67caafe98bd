// Creates a tab group with Titanium.UI API. 
var tabGroup =Titanium.UI.createTabGroup();
 
tabGroup.open();


// Create the window "mainWin" 
var mainWin = Titanium.UI.createWindow ({ 
    title: 'Band Planet',
    backgroundColor: '#000',
    navBarHidden: true, 
    url: 'bands.js', // Link to file which will handle the code for the window
    tabBarHidden: true,
    top: 62
   //statusBarStyle : Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT
});
/*
// Create an ImageView.
var headerView = Ti.UI.createImageView({
	image : 'images/blackbar_04.png',
	width : '100%',
	height : 62,
	top : 0,
	left : 0
});

// Add to the parent view.
mainWin.add(headerView);
*/


 
// Create the tab "mainTab" 
var mainTab = Titanium.UI.createTab ({
    title: "Concerts", 
    icon: 'KS_nav_ui.png', 
    window: mainWin // We will create the window "mainWin" 
});
 
// Add the tab to our tab group 
tabGroup.addTab(mainTab);
tabGroup.open();
