var galleryButton=Titanium.UI.createButton({title:"Photos",color:"#fff",backgroundImage:"images/redbtn.png",height:30,width:80,top:20,right:15,zIndex:2});groupView.add(galleryButton),galleryButton.addEventListener("click",function(){Titanium.Media.openPhotoGallery({success:function(e){var t=Titanium.UI.createImageView({image:e.media,width:320,height:480,top:12,zIndex:1});groupView.add(t)},error:function(){alert("There was an error")},cancel:function(){alert("The photo gallery was cancelled")},allowEditing:!0,mediaTypes:[Ti.Media.MEDIA_TYPE_PHOTO]})});