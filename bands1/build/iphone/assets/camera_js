var mediaBtn=Ti.UI.createButton({title:"Camera",backgroundImage:"images/redbtn.png",color:"#2261E8",bottom:50,width:200}),mediaView=Ti.UI.createView({top:"20%",width:"90%",height:"auto",backgroundColor:"#FFCC00"}),img,camera={onSuccess:function(t){t.mediaType===Ti.Media.MEDIA_TYPE_PHOTO?(img&&mediaView.remove(img),img=Ti.UI.createImageView({image:t.media,zIndex:1}),mediaView.add(img)):t.mediaType===Ti.Media.MEDIA_TYPE_VIDEO?(vid=Ti.Media.createVideoPlayer({media:t.media}),mediaView.add(vid)):alert("This is not a photo or video")},onCancel:function(){alert("Photo cancelled")},onError:function(t){alert("An error occured with code: "+t.code)}};mediaBtn.addEventListener("click",function(){Ti.Media.showCamera({success:camera.onSuccess,cancel:camera.onCancel,error:camera.onError,allowEditing:!0,mediaTypes:[Ti.Media.MEDIA_TYPE_PHOTO],videoQuality:Ti.Media.QUALITY_HIGH,saveToPhotoGallery:!0})});